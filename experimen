import gspread
from google.oauth2.service_account import Credentials

# Configuração
SCOPES = ["https://www.googleapis.com/auth/spreadsheets"]
credentials = Credentials.from_service_account_file("lavandariast-bot-5701b27fb869.json", scopes=SCOPES)
gc = gspread.authorize(credentials)

# ID da folha Google Sheets
SHEET_ID = "16HqwWP3Yy1D4kln5_12VxferPvXwlEJvC79te_4OXw"
sheet = gc.open_by_key(SHEET_ID).sheet1

# Testa a conexão
try:
    sheet.append_row(["Teste", "Conexão Bem-Sucedida!"])
    print("Conexão bem-sucedida! Linha adicionada.")
except Exception as e:
    print(f"Erro: {e}")
